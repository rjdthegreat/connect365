<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Link to Parent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <tr>
        <td><%= parent.student.first_name %></td>
        <td><%= parent.student.last_name %></td>
        <td><%= link_to "Parent", parent_teacher_path(:teacher_id => session[:teacher_id], :parent_id => parent.id) %></td>
        <td><%= link_to 'Show', parent.student %></td>        
        <td><%= link_to 'Edit', edit_student_path(parent.student) %></td>
        <td><%= link_to 'Destroy', parent.student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

